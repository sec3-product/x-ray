{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "Make build dir",
            "type": "shell",
            "command": [
                "mkdir",
                "-p",
                "build"
            ],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "cmake",
            "type": "shell",
            "group": "build",
            "dependsOn": [
                "Make build dir"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "cmake",
            // Define CMAKE_BUILD_TYPE variable because makefiles generated by CMake are single-configuration.
            "args": [
                "-DCMAKE_CXX_COMPILER=clang++",
                "-DCMAKE_C_COMPILER=clang",
                "-DCMAKE_BUILD_TYPE=Debug",
                ".."
            ]
        },
        {
            "label": "build all",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "cmake"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "command": "make",
            "args": [
                "racedetect",
                "-j",
                "$(nproc)"
            ]
        }
    ],
}